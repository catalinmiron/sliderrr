@require "nib"

global-reset()

html
  height 100%
body
  background #333
  height 100%
  position relative
  font 1em/1.5 "Avenir Next"

img
  height 100%
  display block
  margin 0 auto

.bigshot
  position relative
  top 10vh
  height 90vh
  max-width 100%

.bigshot__low
  // 
.bigshot__high
  margin-top -90vh

.shottie-list
  width 100%
  overflow auto
  height 10vh
  position absolute
  top 0
  white-space nowrap

.shottie
  position relative
  cursor pointer
  display inline-block
  height 10vh
  width (@height * (4/3))vh // 4:3 ratio
  margin-right 1px
  background #333
  box-shadow inset 0 0 3em rgba(#000, 0.5)
  overflow hidden
  span
    position absolute
    color white
    background black
    border-radius 3px
    line-height 1.2
    padding 0.3em
    display block
    top 0.25em
    right 0.25em
    font-size 0.5em
    font-weight bold
    opacity 0.5
  svg
    stroke #555
    stroke-width 15
    fill transparent
    display block
    margin 0.5em auto
    width 2em